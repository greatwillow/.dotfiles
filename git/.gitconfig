[user]
	name = Greg Denys
	email = gregory.g.denys@gmail.com
[core]
	excludesfile = ~/.gitignore_global
    editor = nvim
[init]
	defaultBranch = main
[pull]
	ff = only
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[color]
    ui = true
    branch = true
    diff = true
    interactive = true
    status = true
[color "status"]
    added = green
    changed = red
    deleted = red
    untracked = yellow
